<div class="navbar navbar-fixed-top affected-by-sidepanel">
    <div class="navbar-inner">
        <a class="brand in-navbar affected-by-sidepanel" href="#">
            <span class="navbar-brand-icon-holder affected-by-sidepanel"><i class="icon-book icon-white navbar-brand-icon"></i></span>
            <span class="name">EC</span>
        </a>

        <ul class="nav pull-right affected-by-sidepanel">
            <li class="divider-vertical in-navbar"></li>
            <li id="plusButton" data-form="EC_SERVICES" data-caseid="{{caseId}}"><span class="navbar-text" href="#"><i class="icon-plus icon-white"></i> UPDATE</span></li>
        </ul>
    </div>
</div>

<div id="content" class="content affected-by-sidepanel">
    <div class="registry-container container-fluid">
        <div class="row-fluid">
            <div class="span4">
                <img src="../img/mother.png"/>
            </div>

            <div id="ec-name" class="span6">
                <ul class="client-details unstyled">
                    <li class="big-text">{{wifeName}}</li>
                    <li>{{village}}, {{subcenter}}</li>
                    <li>EC: {{ecNumber}}</li>
                </ul>
            </div>

            <div class="span2 pull-right">
                <a class="ec-information-button btn btn-inverse" href="#">
                    <i class="icon-user icon-white"></i>
                    <i class="icon-align-justify icon-white"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="registry-container container-fluid">
        {{#each alerts}}
            <div class="alert">
                <i class="icon-warning-sign"></i>
                <strong>Alert: {{message}}</strong>
            </div>
        {{/each}}
        <div class="alert alert-info">
            <i class="icon-check"></i>
            <strong>To do: Follow up on malaria test</strong>
        </div>
        <div class="divider"></div>
    </div>

    <div class="registry-container container-fluid">
        <div class="big-text row-fluid detail-section-header">
            EC Summary
        </div>
        <div class="well well-for-beneficiary-details">
            <div class="container-fluid container-no-padding">
                <div class="row-fluid beneficiary-detail-component">
                    <div class="beneficiary-detail-header">Family Planning</div>
                    <div class="beneficiary-detail-content">
                        <i class="icon-ok"></i><span class="family-planning-current">{{currentMethod}}</span><br/>
                        <a class="btn family-planning-button btn-large" href="family_planning.html">Family Planning Tool</a>
                    </div>
                    <div class="divider divider-padding-top"></div>
                </div>

                <div class="row-fluid beneficiary-detail-component">
                    <div class="beneficiary-detail-header">Children</div>
                    {{#ifequal children.length 0}}
                        <div class="row-fluid unavailable-data">
                            No child records available
                        </div>
                    {{else}}
                        <div class="beneficiary-detail-content">
                        {{#each children}}
                            {{#if isFemale}}
                                <div class="ec-child girl">
                                    <div style="text-align: center;">
                                        <span style="font-weight: bold">{{age}}</span><br>
                                        Girl
                                    </div>
                                </div>
                            {{else}}
                                <div class="ec-child boy">
                                    <div style="text-align: center;">
                                        <span style="font-weight: bold;">{{age}}</span><br>
                                        Boy
                                    </div>
                                </div>
                            {{/if}}
                        {{/each}}
                        </div>
                    {{/ifequal}}
                </div>
            </div>
        </div>
    </div>
    <div class="registry-container container-fluid">
        <div class="big-text row-fluid detail-section-header">
            Timeline
        </div>
        <div class="well well-for-beneficiary-details">
            <div class="container-fluid container-no-padding">
                {{#ifequal timelineEvents.length 0}}
                    <div class="row-fluid unavailable-data">
                        No timeline data available
                    </div>
                {{else}}
                    <div class="row-fluid beneficiary-detail-component">
                        <div class="beneficiary-detail-content">
                            <div class="container-section container-fluid">
                                {{#each timelineEvents}}
                                    <div class="container-section-component row-fluid">
                                            <div class="timeline dl">
                                                <div class="span2 {{this.status}} dt">
                                                    <i class="icon-eye-open"></i>
                                                </div>
                                                <div class="span6 details-{{this.status}} dd">
                                                    <strong>{{title}}</strong><br>
                                                    {{#each details}}
                                                    {{this}}<br>
                                                    {{/each}}
                                                </div>
                                                <div class="span4 pull-right text-right details-{{this.status}} dd">
                                                    {{date}}
                                                </div>
                                            </div>
                                        </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                {{/ifequal}}
            </div>
        </div>
    </div>
</div>
