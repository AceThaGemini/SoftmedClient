<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomFontTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="fontVariant">regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal" parent="CustomFontTextViewStyle" >
        <item name="fontVariant">medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Normal.GPLSA" parent="CustomFontTextViewStyle.ListView.Normal" >
        <item name="fontVariant">medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Medium" parent="CustomFontTextViewStyle" >
        <item name="fontVariant">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Medium.TwoLine" parent="CustomFontTextViewStyle.ListView.Medium" >
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CustomFontTextViewStyle.ListView.Bold" parent="CustomFontTextViewStyle" >
        <item name="fontVariant">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomFontTextViewStyle.NavBar" parent="CustomFontTextViewStyle" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="CustomFontTextViewStyle.NavBar.Bold" parent="CustomFontTextViewStyle.NavBar" >
        <item name="fontVariant">bold</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="CustomFontTextViewStyle.NavBar.Black" parent="CustomFontTextViewStyle.NavBar" >
        <item name="fontVariant">black</item>
    </style>

    <style name="CustomFontTextViewStyle.StatusBar" parent="CustomFontTextViewStyle" >
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/status_bar_text_almost_white</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="CustomFontTextViewStyle.StatusBar.Bold" parent="CustomFontTextViewStyle.StatusBar" >
        <item name="fontVariant">bold</item>
    </style>

    <style name="CustomFontTextViewStyle.StatusBar.Black" parent="CustomFontTextViewStyle.StatusBar" >
        <item name="fontVariant">black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="CustomFontTextViewStyle.Header.Black" parent="CustomFontTextViewStyle" >
        <item name="fontVariant">black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/client_list_header_text_color</item>
    </style>
</resources>
