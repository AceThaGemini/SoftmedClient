<div class="navbar navbar-fixed-top affected-by-sidepanel">
    <div class="navbar-inner">
        <a class="brand in-navbar affected-by-sidepanel" href="#">
            <span class="navbar-brand-icon-holder affected-by-sidepanel"><i class="icon-book icon-white navbar-brand-icon"></i></span>
            <span class="name">PNC</span>
        </a>

        <ul class="nav pull-right affected-by-sidepanel">
            <li class="divider-vertical in-navbar"></li>
            <li data-modal-target="#pncFormModal"><span class="navbar-text" href="#"><i class="icon-plus icon-white"></i> UPDATE</span></li>
        </ul>
    </div>
</div>

<div id="pncFormModal" class="modal-content">
    <div class="modal-row" data-form="PNC_SERVICES" data-caseid="{{caseId}}">PNC visit</div>
    <div class="divider"></div>
    <div class="modal-row" data-form="CHILD_IMMUNIZATION" data-caseid="{{caseId}}">Child immunization</div>
    <div class="divider"></div>
    <div class="modal-row" data-form="PNC_CLOSE" data-caseid="{{caseId}}">Close PNC record</div>
</div>

<div id="content" class="content affected-by-sidepanel">
    <div class="registry-container container-fluid">
        <div class="row-fluid">
            <div id="ec-name" class="span10">
                <ul class="client-details unstyled">
                    <li class="big-text">{{womanName}}</li>
                    <li>{{location.villageName}}, {{location.subcenter}}</li>
                    <li>Thayi: {{thaayiCardNumber}}</li>
                </ul>
            </div>

            <div class="span2 pull-right">
                <a class="ec-information-button btn btn-inverse" href="#">
                    <i class="icon-user icon-white"></i>
                    <i class="icon-align-justify icon-white"></i>
                </a>
            </div>
        </div>
    </div>

    <div id="todos" class="registry-container container-fluid">
        {{#each urgentTodos}}
            {{#if isCompleted}}
                <div class="alert alert-todo completed">
                    <div class="row-fluid">
                        <div class="span2 todo-checkbox" data-form="{{formToOpen}}" data-caseid="{{../../caseId}}">
                            <div class="todo-box-wrapper"><img class="todo-box checked"/></div>
                        </div>
                        <div class="span10 alert-todo-message">
                            <div class="detail">{{message}}</div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="alert alert-todo overdue">
                    <div class="row-fluid">
                        <div class="span2 todo-checkbox" data-form="{{formToOpen}}" data-caseid="{{../../caseId}}">
                            <div class="todo-box-wrapper"><img class="todo-box"/></div>
                        </div>
                        <div class="span10 alert-todo-message">
                            <div class="detail">{{message}}</div>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}
        {{#each todos}}
            {{#if isCompleted}}
                <div class="alert alert-todo completed">
                    <div class="row-fluid">
                        <div class="span2 todo-checkbox" data-form="{{formToOpen}}" data-caseid="{{../../caseId}}">
                            <div class="todo-box-wrapper"><img class="todo-box checked"/></div>
                        </div>
                        <div class="span10 alert-todo-message">
                            <div class="detail">{{message}}</div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="alert alert-todo upcoming">
                    <div class="row-fluid">
                        <div class="span2 todo-checkbox" data-form="{{formToOpen}}" data-caseid="{{../../caseId}}">
                            <div class="todo-box-wrapper"><img class="todo-box"/></div>
                        </div>
                        <div class="span10 alert-todo-message">
                            <div class="detail">{{message}}</div>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}

        <div class="divider"></div>
    </div>

    <div class="registry-container container-fluid">
        <div class="big-text row-fluid detail-section-header">
            Summary
        </div>
        <div class="well well-for-beneficiary-details">
            <div class="container-fluid container-no-padding">
                <div class="row-fluid beneficiary-detail-component">
                    <div class="beneficiary-detail-content">
                            {{#if details.isHighRisk}}
                                <div class="text-center big-text high-risk">
                                    <i class="icon-circle-arrow-up" style="margin-top: 3px;"></i> High Risk</span>
                                </div>
                                <div class="beneficiary-detail-footer risk-detail-text">{{details.riskDetail}}</div>
                            {{else}}
                                <div class="text-center big-text normal-risk">Normal Risk</div>
                            {{/if}}
                    </div>
                    <div class="row-fluid beneficiary-detail-component">
                        <div class="beneficiary-detail-content">
                            <div class="span6 text-center">
                                <span class="big-text">{{pncDetails.daysPostpartum}}</span><br><span class="meta-summary-text">Days Postpartum</span>
                            </div>
                            <div class="span6 text-center">
                                <span class="big-text">{{pncDetails.dateOfDelivery}}</span><br><span class="meta-summary-text">Date of Delivery</span>
                            </div>
                        </div>
                        <div class="divider"></div>
                        <div class="row-fluid beneficiary-detail-component">
                            <b> Delivery Complications </b>
                            {{#if details.deliveryComplications}}
                            <ol>
                                  {{#each details.deliveryComplications}}
                                    <li>
                                    {{this}}
                                    </li>
                                  {{/each}}
                            </ol>
                            {{else}}
                                <div class="unavailable-data">
                                    No delivery complications known.
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="registry-container container-fluid">
        <div class="big-text row-fluid detail-section-header">
            PNC Plan
        </div>
        <div class="well well-for-beneficiary-details">
            <div class="container-section container-fluid">
                <div class="row-fluid beneficiary-detail-component">
                    42 day checklist
                </div>
            </div>
        </div>
    </div>

    <div class="registry-container container-fluid">
        <div class="big-text row-fluid detail-section-header">
            Timeline
        </div>
        <div class="well well-for-beneficiary-details">
            <div class="container-fluid container-no-padding">
                <div class="row-fluid beneficiary-detail-component">
                    <div class="beneficiary-detail-content">
                        <div class="container-section container-fluid">
                            {{#each timelineEvents}}
                            <div class="container-section-component row-fluid">
                                <div class="span1">
                                    <i class="icon-filter"></i>
                                </div>
                                <div class="span7">
                                    <strong>{{title}}</strong><br>
                                    {{#each details}}
                                    {{this}}<br>
                                    {{/each}}
                                </div>
                                <div class="span4 pull-right text-right">
                                    {{date}}
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
