<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/list_gplsa_view_width"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/ec_list_gplsa_view_weight"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"
                android:text="G"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"
                android:text="P"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"
                android:text="L"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"
                android:text="S"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"
                android:text="A"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_gravida"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"/>

        <TextView
                android:id="@+id/txt_parity"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"/>

        <TextView
                android:id="@+id/txt_number_of_living_children"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"/>

        <TextView
                android:id="@+id/txt_number_of_still_births"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"/>

        <TextView
                android:id="@+id/txt_number_of_abortions"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                style="@style/TextAppearance.ListView.Item"/>

    </LinearLayout>

</LinearLayout>

    