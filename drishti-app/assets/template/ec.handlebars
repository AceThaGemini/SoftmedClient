<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <a class="brand list" href="#">EC</a>

        {{#if isHighPriority}}
            <ul class="nav pull-right">
                <li class="divider-vertical"></li>
                <li><a class="ec-status high-priority" href="#">High Priority</a></li>
            </ul>
        {{/if}}
    </div>
</div>

<div class="content">
    <div class="ec-container container-fluid">
        <div class="row-fluid">
            <div class="span4">
                <img src="../img/mother.png"/>
            </div>

            <div id="ec-name" class="span6">
                <ul class="ec-details unstyled">
                    <li class="ec-name">{{wifeName}}</li>
                    <li>{{village}}, {{subcenter}}</li>
                    <li>EC: {{ecNumber}}</li>
                </ul>
            </div>

            <div class="span2" style="float: right;">
                <a class="ec-information-button btn btn-inverse" href="#">
                    <i class="icon-user icon-white"></i>
                    <i class="icon-align-justify icon-white"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="ec-container container-fluid">
        {{#each alerts}}
            <div class="alert">
                <i class="icon-warning-sign"></i>
                <strong>Alert: {{message}}</strong>
            </div>
        {{/each}}
        <div class="alert alert-info">
            <i class="icon-check"></i>
            <strong>To do: Follow up on malaria test</strong>
        </div>
        <div class="divider"></div>
    </div>

    <div class="ec-container container-fluid">
        <div class="ec-name row-fluid">
            EC Summary
        </div>
        <div class="well well-for-beneficiary-details">
            <div class="container-fluid container-no-padding">
                <div class="row-fluid beneficiary-detail-component">
                    <div class="beneficiary-detail-header">Family Planning</div>
                    <div class="beneficiary-detail-content">
                        <i class="icon-ok"></i><span class="family-planning-current">{{currentMethod}}</span><br/>
                        <a class="btn family-planning-button btn-large" href="family_planning.html">Family Planning Tool</a>
                    </div>
                    <div class="divider divider-padding-top"></div>
                </div>

                <div class="row-fluid beneficiary-detail-component">
                    <div class="beneficiary-detail-header">Children</div>
                    <div class="beneficiary-detail-content">
                    {{#each children}}
                        {{#if isFemale}}
                            <div class="ec-child girl">
                                <div style="text-align: center;">
                                    <span style="font-weight: bold">{{age}}</span><br>
                                    Girl
                                </div>
                            </div>
                        {{else}}
                            <div class="ec-child boy">
                                <div style="text-align: center;">
                                    <span style="font-weight: bold;">{{age}}</span><br>
                                    Boy
                                </div>
                            </div>
                        {{/if}}
                    {{/each}}
                    </div>
                    <div class="divider divider-padding-top"></div>

                    <div id="ec-timeline" class="row-fluid beneficiary-detail-component">
                        <div class="beneficiary-detail-header" data-toggle="collapse" data-target="#nonono">
                            <i class="icon-calendar"></i> View EC Timeline
                            <a><i class="toggle-indicator icon-chevron-down pull-right"></i></a>
                        </div>
                        <div class="beneficiary-detail-content collapse" id="nonono">
                            <div class="divider divider-padding-both"></div>
                            <div class="ec-timeline-details container-fluid">
                                {{#each timeline}}
                                    <div class="ec-timeline-details-component row-fluid">
                                        <div class="span1">
                                            <i class="icon-filter"></i>
                                        </div>
                                            <div class="span7">
                                                <strong>{{event}}</strong><br>
                                                {{#each details}}
                                                    {{this}}<br>
                                                {{/each}}
                                            </div>
                                        <div class="span4 pull-right" style="text-align: right">
                                            {{date}}
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        toggleIconDuringCollapse("#ec-timeline", ".toggle-indicator", "icon-chevron-down", "icon-chevron-up");
                    </script>

                </div>
            </div>
        </div>
    </div>

    <div class="ec-container container-fluid">
        <div class="row-fluid">
            <div class="span4">
                <a class="ec-actions-button btn btn-large" id="contactButton">Contact</a>
            </div>
            <div class="span8">
                <a class="ec-actions-button btn btn-large" id="newVisitButton">New Visit</a>
            </div>
        </div>
    </div>
</div>
